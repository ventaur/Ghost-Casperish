{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#if @custom.tease_inaccessible_content}}
    {{#get "posts" page=pagination.page limit=@config.posts_per_page include="tags"}}
        {{> "listing"}}
    {{/get}}
{{else if @member.paid}}
    {{#get "posts" filter="visibility:[paid, members, public]" page=pagination.page limit=@config.posts_per_page include="tags"}}
        {{> "listing"}}
    {{/get}}
{{else if @member}}
    {{#get "posts" filter="visibility:[members, public]" page=pagination.page limit=@config.posts_per_page include="tags"}}
        {{> "listing"}}
    {{/get}}
{{else}}
    {{#get "posts" filter="visibility:public" page=pagination.page limit=@config.posts_per_page include="tags"}}
        {{> "listing"}}
    {{/get}}
{{/if}}